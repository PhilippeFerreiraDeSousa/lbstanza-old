defpackage stz-test-suite/run :
  import core
  import collections
  import stz-test-suite/test-tools

defn main () :
  val test-suites = [
    "test-proj"
    "test-linker"
    "test-package-manager"
  ]
  for package in test-suites do :
    try :
      call-stanza $ [
        "run-test"
        to-string("stz-test-suite/%_" % [package])]
    catch (e) :
      println(e)

main()